<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../../../dist/output.css">  
    <title>Document</title>
</head>
<body>
    <%- include('../../../partials/sidenav.ejs') %>
    
    <div class="fixed top-0 left-64 w-full h-full bg-white">
        <h1>Course Management</h1>
        <h1>Add Course </h1>
        <form action="/ccet/add-course" method="POST">
            <table>
                <tr>
                    <td>
                        <label>Course Name : </label>
                    </td>
                    <td>
                        <input type="text" name="course" value="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Course Duration : </label>
                    </td>
                    <td>
                        <input type="text" name="duration" value="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Course Fees : </label>
                    </td>
                    <td>
                        <input type="text" name="fees" value="">
                    </td>
                </tr>            
            </table>        
            <button type="submit">Add Course</button>
        </form>

        <h1>View Courses</h1>
        <% if(!courses) { %>
            <p>Something went wrong..</p>
        <% } else { %>
        <% let courseArr = Object.values(courses) %>
        <table>
            <thead>
                <tr>
                    <th>Course name</th>
                    <th>Duration</th>
                    <th>Fees</th>
                    <th>Action</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% courseArr.forEach(e => { %>
                <tr>                
                    <td>
                        <span id="coursename">
                            <%= e.courseName %>
                        </span>
                    </td>
                    <td>
                        <span id="courseduration">
                            <%= e.courseDuration %> months
                        </span>
                    </td>
                    <td>
                        <span id="coursefees">
                            <%= e.courseFees %>
                        </span>
                    </td>
                    <td>                    
                        <a href="/ccet/course-management/<%= e._id %>">
                            <button type="submit">Update</button>
                        </a> 
                    </td>
                    <td>
                        <button class="deleteBtn">Delete</button>
                    </td>                
                    
                    <% }) %>
                </tr>
        </ul>
        <% } %>       
    </div>
    
</body>
</html>