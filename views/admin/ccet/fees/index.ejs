<div class="flex h-screen">
    <%- include('../../../partials/adminTemplate.ejs') %>

    <div class="flex-1 flex flex-col">
        <div class="w-[98%] md:w-full text-xs flex justify-end bg-white py-4">
            <form class="flex gap-2" action="/ccet/fees-management/filter-view" method="POST">
                <div>
                    <select name="courseId" class="w-28 h-8">
                        <option value="">Course</option>
                        <% courses.forEach(course => { %>
                          <option value="<%= course._id %>" <%= course._id.toString() === locals.courseId ? 'selected' : '' %>>
                            <%= course.courseName %>
                          </option>
                        <% }) %>
                    </select>
                </div>
                
                <div>
                    <select name="courseSession" class="w-28 h-8">
                        <option value="">Session</option>
                        <% const years = [2021, 2022, 2023]; %>
                        <% years.forEach(year => { %>
                          <option value="<%= year %>" <%= year.toString() === locals.courseSession ? 'selected' : '' %>>
                            <%= year %>
                          </option>
                        <% }) %>
                    </select>  
                </div>                
                
                <input type="text" name="studentName" class="w-28 h-8" placeholder="Id/Name">
                <div>
                    <button class="h-8 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </form> 
        </div>
                   
            <table class="w-[98%] md:w-full text-xs text-left text-blue-600 dark:text-blue-100">
                <thead class="text-white uppercase bg-blue-600 dark:text-white">
                    <tr>
                        <th scope="col" class="md:px-4 md:py-2">
                            Student name
                        </th>
                        <th scope="col" class="md:px-4 md:py-2">
                            Course Enrolled
                        </th>
                        <th scope="col" class="md:px-4 md:py-2">
                            Fees paid on admission (excl.)
                        </th>
                        <th scope="col" class="md:px-4 md:py-2">
                            Course fees paid
                        </th>
                        <th scope="col" class="md:px-4 md:py-2">
                            Action
                        </th>
                        <th scope="col" class="md:px-4 md:py-2">
                            Action
                        </th>
                    </tr>
                </thead>

                <% if(students && students.length > 0) { %>

                <tbody>
                    <% students.forEach(student => { %>
                        <tr class="bg-blue-100 text-gray-700 border-b border-blue-300 hover:bg-blue-200 hover:text-gray-800">
                            <td class="md:px-4 md:py-2">
                                <%= student.studentName %>
                            </td>
                            <td class="md:px-4 md:py-2">
                                <%= student.courseEnrolled.courseName %>
                            </td>
                            <td class="md:px-4 md:py-2">
                                <%= student.fee.admissionFeesAmount %>
                            </td>
                            <td class="md:px-4 md:py-2">
                                <% if (Array.isArray(student.fee.totalFeesPaid)) { %>
                                    <%= Object.values(student.fee.totalFeesPaid).reduce((acc, val) => acc + val, 0) %>
                                <% } else { %>
                                    <p>Object</p>
                                <% } %>
                            </td>
                            <td class="md:px-4 md:py-2">
                                <a href="/ccet/fees-management/record-fees/<%= student._id %>">
                                    <button type="submit">Record Payment</button>
                                </a>                        
                            </td>
                            <td class="md:px-4 md:py-2">
                                <a href="/ccet/fees-management/fees-history/<%= student._id %>">
                                    <button type="submit">view Fees History</button>
                                </a>                        
                            </td>
                        </tr>
                    <% }) %>
                </tbody>   
                
                <% } else { %>
                    <tbody>
                        <tr>
                            <td>
                                <p class="my-8 mx-2 text-gray-600">No records..</p>
                            </td>
                        </tr>
                    </tbody>                    
                <% } %> 
                
            </table>

        <!-- Pagination links goes here -->
        <% if (totalPages > 1) { %> <!-- Check if totalPages is greater than 1 -->
            <nav class="flex items-center justify-center m-8" aria-label="Page navigation">
              <% if (currentPage > 1) { %>
                <a class="mr-2 px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" href="/ccet/fees-management/?page=<%= currentPage - 1 %>">Previous</a>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
                <a class="mr-2 px-3 py-2 bg-blue-200 text-blue-800 rounded hover:bg-blue-500 hover:text-white <% if (i === currentPage) { %>bg-blue-500 text-white<% } %>" href="/ccet/fees-management/?page=<%= i %>"><%= i %></a>
              <% } %>
              <% if (currentPage < totalPages) { %>
                <a class="mr-2 px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" href="/ccet/fees-management/?page=<%= currentPage + 1 %>">Next</a>
              <% } %>
            </nav>
        <% } %>

    </div>

</div>

    
    
</body>

</html>