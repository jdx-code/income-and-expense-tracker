<div class="flex h-screen">
    <div class="w-64 bg-[#4d44b5]">
        <%- include('../../../partials/adminTemplate.ejs') %>
    </div>

    <div class="flex-1 flex flex-col p-4">
        <div class="flex bg-white justify-end p-4">
            <form class="flex gap-4" action="/ccet/student-management/filter-view" method="POST">
                
                <label class="flex items-center">
                    <span class="mr-2">Filter your search</span>
                    <select name="courseId">
                        <option value="">Select Course</option>
                        <% courses.forEach(course => { %>
                          <option value="<%= course._id %>" <%= course._id.toString() === locals.courseId ? 'selected' : '' %>>
                            <%= course.courseName %>
                          </option>
                        <% }) %>
                    </select>                      
                </label>
                    
                <div>
                    <select name="courseSession">
                        <option value="">Select Session</option>
                        <% const years = [2021, 2022, 2023]; %>
                        <% years.forEach(year => { %>
                          <option value="<%= year %>" <%= year.toString() === locals.courseSession ? 'selected' : '' %>>
                            <%= year %>
                          </option>
                        <% }) %>
                    </select>                      
                </div>

                <div>
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Search</button>
                </div>
            </form>
        </div>

        <div class="flex-1 relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-blue-600 dark:text-blue-100">
                <thead class="text-xs text-white uppercase bg-blue-600 dark:text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Education
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Course Enrolled
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Date of admission
                        </th>
                        <th scope="col" class="px-6 py-3">Form</th>                        
                    </tr>            
                </thead>     

                <% if(students && students.length > 0) { %>
                    
                <tbody>                
                    <% students.forEach(student => { %>
                                
                        <tr class="bg-blue-100 text-gray-700 border-b border-blue-300 hover:bg-blue-200 hover:text-gray-800">
                            <td style="display:none" class="px-6 py-4">                
                                <%= student._id %>                
                            </td>
                            <td class="px-6 py-4">
                                <%= student.studentName %>
                            </td>
                            <td class="px-6 py-4">
                                <%= student.lastExamPassed %>
                            </td>
                            <td class="px-6 py-4">
                                <%= student.courseEnrolled.courseName %>
                            </td>
                            <td class="px-6 py-4">                
                                <%= student.enrollmentDate %>                
                            </td>
                            <td class="px-6 py-4">             
                                <a target="_blank" href="/ccet/student-management/<%= student._id %>">                    
                                    <button type="submit">View Admission Form</button>
                                </a>
                            </td>                        
                        </tr>    
                    <% }) %>  
                </tbody>  

                <% } else { %>
                    <tbody>
                        <tr>
                            <td>
                                <p class="my-8 mx-2 text-gray-600">No records..</p>
                            </td>
                        </tr>
                    </tbody>                    
                <% } %>                
                
            </table>
        </div>
        
        <!-- Pagination links goes here -->
        <% if (totalPages > 1) { %> <!-- Check if totalPages is greater than 1 -->
            <nav class="flex items-center justify-center m-8" aria-label="Page navigation">
              <% if (currentPage > 1) { %>
                <a class="mr-2 px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" href="/ccet/student-management/?page=<%= currentPage - 1 %>">Previous</a>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
                <a class="mr-2 px-3 py-2 bg-blue-200 text-blue-800 rounded hover:bg-blue-500 hover:text-white <% if (i === currentPage) { %>bg-blue-500 text-white<% } %>" href="/ccet/student-management/?page=<%= i %>"><%= i %></a>
              <% } %>
              <% if (currentPage < totalPages) { %>
                <a class="mr-2 px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" href="/ccet/student-management/?page=<%= currentPage + 1 %>">Next</a>
              <% } %>
            </nav>
        <% } %>
    </div>
</div>

<script src="../../../../js/main.js"></script>
    
</body>
</html>
