<div class="flex h-screen">    
           
    <%- include('../../../partials/adminTemplate.ejs') %>    

    <div class="flex-1 flex items-center bg-white">        

        <div class="w-[95%] lg:mx-36 sm:mx-8 p-8 flex flex-col lg:items-center bg-[#d7eaf8]">            
            <h1 class="w-[60%] bg-gradient-to-r from-indigo-400 my-4 p-2 text-white">Add New Student</h1>            
            <form action="/ccet/add-student" method="POST" enctype="multipart/form-data">
                <table>
                    <tr>
                        <td>
                            <label class="text-sm sm:text-base">
                                Student Name
                            </label>                    
                        </td>
                        <td>
                            <input class="my-3 w-52 sm:w-60 h-10 rounded-md" type="text" name="studentName">
                        </td>
                    </tr>   
                    <tr>
                        <td>
                            <label class="text-sm sm:text-base">
                                Last Exam Passed
                            </label>                    
                        </td>
                        <td>
                            <select class="my-3 w-44 sm:w-60 h-10 rounded-md" name="lastExamPassed">
                                <option value="hslc">HSLC</option>
                                <option value="hs">HS</option>
                                <option value="graduation">Graduation</option>
                                <option value="post graduation">Post Graduation</option>
                            </select>
                        </td>
                    </tr>   
                    <tr>
                        <td>
                            <label class="text-sm sm:text-base">
                                Course enrolled
                            </label>
                        </td>
                        <td>
                            <select class="my-3 w-44 sm:w-60 h-10 rounded-md" name="courseEnrolled">
                                <% courses.forEach(course => { %>
                                    <option value="<%= course._id %>">
                                        <%= course.courseName %>
                                    </option>            
                                <% }) %>
                            </select>
                        </td>
                    </tr>   
                    <tr>
                        <td>
                            <label class="text-sm sm:text-base">
                                Upload Admission Form 
                            </label>
                        </td>
                        <td>
                            <input class="my-3" type="file" name="image" value="">
                        </td>
                    </tr>
                    <tr>
                        <td>

                        </td>
                        <td>
                            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Submit</button>
                        </td>
                    </tr>
                </table>
        
                
                
            </form>
        </div>
    </div>
</div>

    <script src="../../../../js/main.js"></script>
    
</body>
</html>

